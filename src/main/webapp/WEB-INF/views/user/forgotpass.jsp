<div class="mtb_20">
          <!-- contact  -->
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <div class="panel-login panel">
                <div class="panel-heading">
                  <div class="row mb_20">
                    <div class="col-xs-6 ">
                      <a href="#" class="active text-align" id="login-form-link">Forgot Password</a>
                    </div>
                  </div>
                  <hr>
                   <h5 class="text-danger">${message }</h5>
                </div>
                
                <div class="panel-body">
                  <div class="row">
                    <div class="col-lg-12">
                      <form id="login-form" action="forgotpass" method="post">
                       <div class="form-group">
                          <input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="User Name">
                        </div>
                        <div class="form-group">
                          <input type="email" name="email" id="email" tabindex="2" class="form-control" placeholder="Email Address">
                        </div>
                        <div class="form-group">
                          <div class="row">
                            <div class="col-sm-6 col-sm-offset-3">
                              <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Send my password">
                            </div>
                          </div>
                        </div>
                       
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
